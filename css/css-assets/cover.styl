// COVER
@import '../assets/imports.styl'

.cover-place
	position absolute
	nw -0%
	rect 100%
	z-index 10
	perspective 600000px

foldedSize = 200px
.cover
	position absolute
	nw  	0
	rect 100%
	transform rotateY(0deg) rotateX(0deg) translateY(0px) translateZ(0px)
	transform-origin right top
	transform-style preserve-3d
	&__item
		position absolute
		&__shadow
			rect 100%
			position absolute
			nw 0
			background rgba(0,0,0,.5)
			opacity 0
		&:after
			content ''
			position absolute
			rect 100%
			nw 0
			background lighten(#00AEFF,10) url('i/pattern.svg') repeat left center
			background darken(#F8EC5D, 15) url('i/pattern.svg') repeat left center
			background #08d6bb url('i/pattern.svg') repeat left center
			opacity .75
		&--base
			background: rgb(255,255,255) /* Old browsers */
			background: -moz-linear-gradient(left,  rgba(255,255,255,1) 0%, rgba(232,232,232,1) 100%) /* FF3.6+ */
			background: -webkit-gradient(linear, left top, right top, color-stop(0%,rgba(255,255,255,1)), color-stop(100%,rgba(232,232,232,1))) /* Chrome,Safari4+ */
			background: -webkit-linear-gradient(left,  rgba(255,255,255,1) 0%,rgba(232,232,232,1) 100%) /* Chrome10+,Safari5.1+ */
			background: -o-linear-gradient(left,  rgba(255,255,255,1) 0%,rgba(232,232,232,1) 100%) /* Opera 11.10+ */
			background: -ms-linear-gradient(left,  rgba(255,255,255,1) 0%,rgba(232,232,232,1) 100%) /* IE10+ */
			background: linear-gradient(to right,  rgba(255,255,255,1) 0%,rgba(232,232,232,1) 100%) /* W3C */
			rect 100%
		&--left
			left 0
			transform-origin left center
			transform rotateY(90deg)
			background-image: -o-linear-gradient(0deg, #FFFFFF 0%, #e8e8e8 100%);
			background-image: -moz-linear-gradient(0deg, #FFFFFF 0%, #e8e8e8 100%);
			background-image: -webkit-linear-gradient(0deg, #FFFFFF 0%, #e8e8e8 100%);
			background-image: -ms-linear-gradient(0deg, #FFFFFF 0%, #e8e8e8 100%);
			background-image: linear-gradient(-90deg, #FFFFFF 0%, #e8e8e8 100%);
			&:after
				background-image url('i/pattern2.svg')
		&--left
			height 100%
			width foldedSize
		&--bottom
			bottom 0
			transform-origin center bottom
			transform rotateX(90deg)
			background: #ffffff /* Old browsers */
			background: -moz-linear-gradient(top,  #ffffff 0%, #e1e1e1 100%) /* FF3.6+ */
			background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ffffff), color-stop(100%,#e1e1e1)) /* Chrome,Safari4+ */
			background: -webkit-linear-gradient(top,  #ffffff 0%,#e1e1e1 100%) /* Chrome10+,Safari5.1+ */
			background: -o-linear-gradient(top,  #ffffff 0%,#e1e1e1 100%) /* Opera 11.10+ */
			background: -ms-linear-gradient(top,  #ffffff 0%,#e1e1e1 100%) /* IE10+ */
			background: linear-gradient(to bottom,  #ffffff 0%,#e1e1e1 100%) /* W3C */
			&:after
				transform rotate(180deg)
			.cover__item__shadow
				&:after
					content ''
					position absolute
					nw 0
					rect 100%
					opacity .35
					background: -moz-linear-gradient(top,  rgba(0,0,0,0) 0%, rgba(0,0,0,0.65) 100%); /* FF3.6+ */
					background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(0,0,0,0)), color-stop(100%,rgba(0,0,0,0.65))); /* Chrome,Safari4+ */
					background: -webkit-linear-gradient(top,  rgba(0,0,0,0) 0%,rgba(0,0,0,0.65) 100%); /* Chrome10+,Safari5.1+ */
					background: -o-linear-gradient(top,  rgba(0,0,0,0) 0%,rgba(0,0,0,0.65) 100%); /* Opera 11.10+ */
					background: -ms-linear-gradient(top,  rgba(0,0,0,0) 0%,rgba(0,0,0,0.65) 100%); /* IE10+ */
					background: linear-gradient(to bottom,  rgba(0,0,0,0) 0%,rgba(0,0,0,0.65) 100%); /* W3C */

		&--bottom
			width 100%
			height foldedSize

