// COVER
@import '../assets/imports.styl'

.cover-place
	position absolute
	nw -0%
	rect 100%
	z-index 10
	perspective 600000px
	transform-style preserve-3d

foldedSize = 200px
.cover
	position absolute
	nw  	0
	rect 100%
	transform rotateY(0deg) rotateX(0deg) translateY(0px) translateZ(0px)
	transform-origin right top
	transform-style preserve-3d
	&__item
		position absolute
		&:after
			content ''
			position absolute
			rect 100%
			nw 0
			background #00AEFF url('i/pattern.svg') repeat left top
			opacity .75
		&:before
			content ''
			position absolute
			rect 100%
			nw 0
			background transparent url('i/shadow-mask.png') no-repeat left top
			background-size 100% 100%
			opacity .2
			
		&--base
			background: -moz-radial-gradient(center, ellipse cover,  rgba(237,237,237,1) 0%, rgba(223,223,223,1) 100%); /* FF3.6+ */
			background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,rgba(237,237,237,1)), color-stop(100%,rgba(223,223,223,1))); /* Chrome,Safari4+ */
			background: -webkit-radial-gradient(center, ellipse cover,  rgba(237,237,237,1) 0%,rgba(223,223,223,1) 100%); /* Chrome10+,Safari5.1+ */
			background: -o-radial-gradient(center, ellipse cover,  rgba(237,237,237,1) 0%,rgba(223,223,223,1) 100%); /* Opera 12+ */
			background: -ms-radial-gradient(center, ellipse cover,  rgba(237,237,237,1) 0%,rgba(223,223,223,1) 100%); /* IE10+ */
			background: radial-gradient(ellipse at center,  rgba(237,237,237,1) 0%,rgba(223,223,223,1) 100%); /* W3C */
			rect 100%
		&--left
			left 0
			transform-origin left center
			transform rotateY(90deg)
			background-image: -o-linear-gradient(0deg, #FFFFFF 0%, #e8e8e8 100%);
			background-image: -moz-linear-gradient(0deg, #FFFFFF 0%, #e8e8e8 100%);
			background-image: -webkit-linear-gradient(0deg, #FFFFFF 0%, #e8e8e8 100%);
			background-image: -ms-linear-gradient(0deg, #FFFFFF 0%, #e8e8e8 100%);
			background-image: linear-gradient(-90deg, #FFFFFF 0%, #e8e8e8 100%);
		
		&--left
			height 100%
			width foldedSize
		&--bottom
			bottom 0
			transform-origin center bottom
			transform rotateX(90deg)
			background: #ffffff; /* Old browsers */
			background: -moz-linear-gradient(top,  #ffffff 0%, #e1e1e1 100%); /* FF3.6+ */
			background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ffffff), color-stop(100%,#e1e1e1)); /* Chrome,Safari4+ */
			background: -webkit-linear-gradient(top,  #ffffff 0%,#e1e1e1 100%); /* Chrome10+,Safari5.1+ */
			background: -o-linear-gradient(top,  #ffffff 0%,#e1e1e1 100%); /* Opera 11.10+ */
			background: -ms-linear-gradient(top,  #ffffff 0%,#e1e1e1 100%); /* IE10+ */
			background: linear-gradient(to bottom,  #ffffff 0%,#e1e1e1 100%); /* W3C */
			
		&--bottom
			width 100%
			height foldedSize

